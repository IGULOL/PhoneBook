@model PhoneBook.ViewModels.Account.RegisterViewModel
<h3>Регистрация нового пользователя</h3>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <hr/>
    <div>
        <label asp-for="Email" class="control-label"></label><br />
        <input asp-for="Email" class="form-control" style="width:30%"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Surname" class="control-label"></label><br />
        <input asp-for="Surname" class="form-control" style="width:30%"/>
        <span asp-validation-for="Surname"></span>
    </div>
    <div>
        <label asp-for="Name" class="control-label"></label><br />
        <input asp-for="Name" class="form-control" style="width:30%"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Patronymic" class="control-label"></label><br />
        <input asp-for="Patronymic" class="form-control" style="width:30%"/>
        <span asp-validation-for="Patronymic"></span>
    </div>
    <div>
        <label asp-for="Password" class="control-label"></label><br />
        <input asp-for="Password" class="form-control" style="width:30%"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm" class="control-label"></label><br />
        <input asp-for="PasswordConfirm" class="form-control" style="width:30%"/>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Регистрация" class="btn btn-default" />
    </div>
</form>