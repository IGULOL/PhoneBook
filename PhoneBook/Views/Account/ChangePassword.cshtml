@model PhoneBook.ViewModels.Account.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}

<h3>Изменение пароля </h3>
<p>@ViewData["NameUser"], придумайте новый пароль</p>
<hr/>
<form asp-action="ChangePassword" asp-controller="Account">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label" ></label>
        <input asp-for="OldPassword" class="form-control" style="width:30%"/>
        <span asp-validation-for="OldPassword"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label"></label>
        <input asp-for="NewPassword" class="form-control" style="width:30%" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm" class="control-label"></label><br />
        <input asp-for="PasswordConfirm" class="form-control" style="width:30%" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <br/>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
