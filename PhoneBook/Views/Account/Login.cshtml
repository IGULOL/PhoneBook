@model PhoneBook.ViewModels.Account.LoginViewModel

<h3>Вход в приложение</h3>
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>

    <hr/>
    <div>
        <a asp-area="" asp-controller="Account" asp-action="Register">Забыли пароль?</a><br/><br />
    </div>
    <div>
        <label asp-for="Email" class="control-label"></label><br />
        <input asp-for="Email" class="form-control" style="width:30%" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password" class="control-label"></label><br />
        <input asp-for="Password" class="form-control" style="width:30%" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input asp-for="RememberMe" /> <label asp-for="RememberMe"></label>
    </div>

    <br />
    <div class="form-group">
        <input type="submit" value="Войти" class="btn btn-default" />
    </div>
</form>

