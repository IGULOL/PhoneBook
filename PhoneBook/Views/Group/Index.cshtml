@model IEnumerable<PhoneBook.Models.Groups.Group>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Группы</title>
</head>
<body>

<h3 style="display:block; float:left">Группы:</h3>
<a style="margin: 25px 0px 10px 0px; display:block; float:right" asp-area="" asp-controller="Group" asp-action="Create">Добавить</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        @if (item.Name != "Неизвестно")
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="text-align:right">
                    <a asp-area="" asp-controller="Group" asp-action="Edit" asp-route-id="@item.Id"> Редактировать </a> |
                    @*<a asp-area="" asp-controller="Group" asp-action="Details" asp-route-id="@item.Id"> Подробнее </a> |*@
                    <a asp-area="" asp-controller="Group" asp-action="Delete" asp-route-id="@item.Id"> Удалить </a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
</body>
</html>
